<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.RelojFragment">

    <diego.reloj.com.reloj.Widgets.RelojAnalogo
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" />

    <ListView
        android:id="@+id/lvAlarmas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbtnEstablecerAlarma"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:clickable="true"

        android:src="@drawable/ic_agregar_alarma"
        app:backgroundTint="?attr/colorBackgroundFloating" />
</LinearLayout>